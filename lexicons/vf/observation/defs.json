{
  "lexicon": 1,
  "id": "vf.observation.defs",
  "description": "Shared definitions for observation types",
  "defs": {
    "measure": {
      "type": "object",
      "description": "Semantic meaning for measurements: binds a quantity to its measurement unit",
      "required": ["hasNumericalValue"],
      "properties": {
        "hasNumericalValue": {
          "type": "integer",
          "description": "A number representing the quantity (scaled integer to avoid floats)"
        },
        "hasUnit": {
          "type": "string",
          "format": "at-uri",
          "description": "Reference to a Unit record"
        },
        "scale": {
          "type": "integer",
          "description": "Decimal places to divide hasNumericalValue by (e.g., 2 means divide by 100)",
          "minimum": 0,
          "maximum": 10,
          "default": 0
        }
      }
    },
    "duration": {
      "type": "object",
      "description": "A duration represents an interval between two DateTime values",
      "required": ["numericDuration", "unitType"],
      "properties": {
        "numericDuration": {
          "type": "integer",
          "description": "A number representing the duration (scaled integer)"
        },
        "unitType": {
          "type": "string",
          "description": "A unit of time measure",
          "knownValues": ["year", "month", "week", "day", "hour", "minute", "second"]
        },
        "scale": {
          "type": "integer",
          "description": "Decimal places for numericDuration",
          "minimum": 0,
          "maximum": 10,
          "default": 0
        }
      }
    },
    "action": {
      "type": "string",
      "description": "Action verb for economic events",
      "knownValues": [
        "produce",
        "use",
        "consume",
        "cite",
        "work",
        "pickup",
        "dropoff",
        "accept",
        "modify",
        "transfer",
        "move",
        "raise",
        "lower"
      ]
    }
  }
}
