{
  "lexicon": 1,
  "id": "vf.agent.person",
  "defs": {
    "main": {
      "type": "record",
      "description": "A natural person with economic agency",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name that this agent will be referred to by",
            "maxLength": 500
          },
          "image": {
            "type": "string",
            "format": "uri",
            "description": "The URI to an image relevant to the agent, such as a photo or avatar"
          },
          "note": {
            "type": "string",
            "description": "A textual description or comment",
            "maxGraphemes": 3000,
            "maxLength": 10000
          }
        }
      }
    }
  }
}
