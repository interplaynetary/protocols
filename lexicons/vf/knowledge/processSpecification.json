{
  "lexicon": 1,
  "id": "vf.knowledge.processSpecification",
  "defs": {
    "main": {
      "type": "record",
      "description": "Specifies the kind of process",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "An informal or formal textual identifier for the process",
            "maxLength": 500
          },
          "image": {
            "type": "string",
            "format": "uri",
            "description": "The image of the process"
          },
          "note": {
            "type": "string",
            "description": "A textual description or comment",
            "maxGraphemes": 3000,
            "maxLength": 10000
          }
        }
      }
    }
  }
}
