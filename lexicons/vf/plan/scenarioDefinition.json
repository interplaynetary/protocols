{
  "lexicon": 1,
  "id": "vf.plan.scenarioDefinition",
  "defs": {
    "main": {
      "type": "record",
      "description": "The type definition of one or more scenarios, such as Yearly Budget",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "An informal or formal textual identifier for a scenario definition",
            "maxLength": 500
          },
          "hasDuration": {
            "type": "ref",
            "ref": "vf.observation.defs#duration",
            "description": "The duration of the scenario, often an accounting period"
          },
          "note": {
            "type": "string",
            "description": "A textual description or comment",
            "maxGraphemes": 3000,
            "maxLength": 10000
          }
        }
      }
    }
  }
}
